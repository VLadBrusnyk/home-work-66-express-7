<!doctype html>
<html lang="uk">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Article <%= article.id %>
    </title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/styles.css" />
</head>

<body>
    <main class="container">
        <header class="page-header">
            <a class="back-link" href="<%= (basePath || '/articles') %>">← До списку</a>
            <h1>
                <%= article.title %>
            </h1>
            <p class="muted">Деталі статті.</p>
        </header>

        <section class="card">
            <div class="field">
                <div class="label">ID</div>
                <div class="value">
                    <%= article.id %>
                </div>
            </div>
            <div class="field">
                <div class="label">Author</div>
                <div class="value">
                    <%= article.author %>
                </div>
            </div>
            <div class="field">
                <div class="label">Body</div>
                <div class="value">
                    <%= article.body %>
                </div>
            </div>
        </section>
    </main>
</body>

</html>