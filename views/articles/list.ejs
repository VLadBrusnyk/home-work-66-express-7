<!doctype html>
<html lang="uk">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Articles</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/styles.css" />
</head>

<body>
    <main class="container">
        <header class="page-header">
            <h1>Articles</h1>
            <p class="muted">Список статей.</p>
        </header>

        <ul class="card-list">
            <% for (const article of articles) { %>
                <li class="card">
                    <a class="card-title" href="<%= (basePath || '/articles') %>/<%= article.id %>">
                        <%= article.title %>
                    </a>
                    <div class="card-meta">Author: <%= article.author %>
                    </div>
                </li>
                <% } %>
        </ul>
    </main>
</body>

</html>